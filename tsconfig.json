{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types","./global.d.ts"], 
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}